#include "F28x_Project.h"
#include "PeriADC.h"

void ConfigureADC(void)
{
    EALLOW;
    AdcaRegs.ADCCTL2.bit.PRESCALE = 6; //时钟时钟预分频至输入时钟的1/4,主频200M,ADC频率最大50M
    // 设定ADC模块
    AdcSetMode(ADC_ADCA, ADC_RESOLUTION_12BIT, ADC_SIGNALMODE_SINGLE);
    EDIS;
}
